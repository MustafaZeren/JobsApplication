@model IEnumerable<JobsApplication.Models.Job>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1>Jobs</h1>

    <p>
        <a asp-action="IndexSortByMonths">Show Months View</a>
        |
        <a asp-action="Create">Add Job</a>
        |
        <a asp-action="IndexSortByWeeks">Show Weeks View</a>
    </p>
    <table class="table table-striped table-bordered" id="tableJobs">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.JobName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Time)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(x => x.Time))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.JobName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
