@model IEnumerable<JobsApplication.Models.Job>

@{
    ViewData["Title"] = "IndexSortByWeeks";
}

    <div class="text-center">
        <h1>Jobs</h1>

        <p>
            <a asp-action="Index">Back to Normal Form</a>
            |
            <a asp-action="Create">Add Job</a>
            |
            <a asp-action="IndexSortByMonths">Show Months View</a>
        </p>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.JobName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Time)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(x => x.Time.Year).ThenBy(x => x.Time.Month).ThenBy(x => x.Time.Day).ThenBy(x => x.Time.Hour))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.JobName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time.DayOfWeek)
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>